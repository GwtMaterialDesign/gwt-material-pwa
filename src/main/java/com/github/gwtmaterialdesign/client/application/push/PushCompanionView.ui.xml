<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:m="urn:import:gwt.material.design.client.ui"
        xmlns:ma="urn:import:gwt.material.design.addins.client">

    <m:MaterialRow paddingTop="120">
        <m:MaterialColumn grid="s12 m6 l4" offset="m3 l4">
            <m:MaterialCard>
                <m:MaterialCardContent>
                    <m:MaterialRow ui:field="fieldRow">
                        <m:MaterialTextBox ui:field="title" label="Title" text="Some Title Here" grid="s12" />
                        <m:MaterialTextBox ui:field="image" label="Image" grid="s12" text="https://3.bp.blogspot.com/-u5JcZlIY0wY/WOZuCA7IBoI/AAAAAAAACh8/eXf8Hb7mtTYMBzDdgSSSeiYTe1fJ4O3owCLcB/s1600/image00.png" />
                        <m:MaterialTextArea ui:field="description" label="Description" grid="s12" text="Some Description Here" />
                    </m:MaterialRow>
                </m:MaterialCardContent>
                <m:MaterialCardAction padding="0">
                    <m:MaterialButton ui:field="notifyAllUser" text="Notify all subscribed user" textColor="BLUE" iconType="CHECK" type="FLAT" waves="DEFAULT"/>
                </m:MaterialCardAction>
            </m:MaterialCard>
        </m:MaterialColumn>
    </m:MaterialRow>
</ui:UiBinder>