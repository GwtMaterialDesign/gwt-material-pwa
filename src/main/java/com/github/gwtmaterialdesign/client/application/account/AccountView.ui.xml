<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:m="urn:import:gwt.material.design.client.ui">

    <m:MaterialRow paddingTop="120">
        <m:MaterialColumn grid="s12 m6 l4" offset="m3 l4">
            <m:MaterialCard>
                <m:MaterialCardContent>
                    <m:MaterialRow ui:field="fieldRow">
                        <m:MaterialTextBox label="Name" text="John Doe" grid="s12" />
                        <m:MaterialTextBox label="Address" text="California, United States" grid="s12" />
                        <m:MaterialTextBox label="Company" text="Doe Solutions" grid="s12" />
                        <m:MaterialTextArea label="About" text="Lorem ipsum dolor sit amet, eos in tota aliquip deleniti. Mundi exerci vituperata mel ex. Putent aliquam inermis nec no, duo ponderum convenire ut. Ad ridens persius quo, dicam omnesque praesent ut nec. Mel veniam neglegentur ne." grid="s12"/>
                    </m:MaterialRow>
                </m:MaterialCardContent>
                <m:MaterialCardAction padding="0">
                    <m:MaterialButton ui:field="save" text="Save" textColor="GREY" iconType="CHECK" type="FLAT" waves="DEFAULT"/>
                </m:MaterialCardAction>
            </m:MaterialCard>
        </m:MaterialColumn>
    </m:MaterialRow>
</ui:UiBinder>
